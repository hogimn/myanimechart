# =================================================================
# MyAnimeChart Environment Variables
# =================================================================

# Alarm: Discord Webhook URL for batch monitoring alerts
myanimechart_discord_webhook_url=your_discord_webhook_url

# CORS: Comma-separated origins (no trailing slashes)
myanimechart_cors_allowed_origins=http://localhost:3001,http://localhost:8100

# Eureka: Service Registry URL
myanimechart_serviceregistry_url=http://localhost:8761/eureka/

# React/Gateway: Base URL for the Gateway
myanimechart_gateway_url=http://localhost:8100

# Database: MariaDB connection details
myanimechart_mariadb_url=jdbc:mariadb://localhost:3306/myanimechart
myanimechart_mariadb_username=your_username
myanimechart_mariadb_password=your_password

# MyAnimeList(MAL) OAuth: Required for collecting anime metadata and user sync
myanimechart_home_url=http://localhost:3001
myanimechart_myanimelist_client_id=your_mal_client_id
myanimechart_myanimelist_client_secret=your_mal_secret
myanimechart_myanimelist_redirect_uri=your_mal_redirect_uri

# HTTPS SSL (Spring Boot): Required only in production
myanimechart_keystore_alias=your_keystore_alias
myanimechart_keystore_password=your_password
myanimechart_keystore_path=/absolute/path/to/keystore.jks

# Truststore: Required for secure communication with external APIs
myanimechart_truststore_password=your_truststore_password
myanimechart_truststore_path=/absolute/path/to/truststore.jks
